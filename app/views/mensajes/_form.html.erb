<%= simple_form_for(@mensaje) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :asunto %>
    <%= f.input :consulta %>
    <%= f.association :user %>
    <%= f.input :user_id %>
    <%= f.association :category %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
