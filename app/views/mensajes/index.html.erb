<%- model_class = Mensaje -%>
<div class="page-header">
  <h1><%=t '.title', :default => Mensaje %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:asunto) %></th>
      <th><%= model_class.human_attribute_name(:consulta) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @mensajes.each do |mensaje| %>
      <tr>
        <td><%= mensaje.id %></td>
        <td><%= mensaje.asunto %></td>
        <td><%= mensaje.consulta %></td>
        <td><%= mensaje.user_id %></td>
        <td><%=l mensaje.created_at, format: :long %></td>
        <td>
          <%= link_to mensaje_path(mensaje), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to mensaje_path(mensaje), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mensaje_path,
            :class => 'btn btn-primary' %>
