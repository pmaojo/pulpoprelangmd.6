<%- model_class = Mensaje -%>
<div class="page-header">
  <h1><%=t '.title', :default => Mensaje %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:asunto) %></dt>
      <dd><pre class="prettyprint"><%= @mensaje.asunto %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:consulta) %></dt>
      <dd><pre class="prettyprint"><%= @mensaje.consulta %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:user_id) %></dt>
      <dd><pre class="prettyprint"><%= @mensaje.user_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              mensajes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mensaje_path(@mensaje), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mensaje_path(@mensaje),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

