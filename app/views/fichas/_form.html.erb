<%= simple_form_for(@ficha) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :peso_inicial %>
    <%= f.input :altura %>
    <%= f.input :idm %>
    <%= f.input :peso_ideal %>
    <%= f.input :peso_objetivo %>
    <%= f.input :talla_inicial %>
    <%= f.input :talla_objetivo %>
    <%= f.input :ejercicio %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
