<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Body</th>
      <th>Link</th>
      <th>Imagen</th>
      <th>Category</th>
      <th>User</th>
      <th>Published</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.titulo %></td>
        <td><%= post.body %></td>
        <td><%= post.link %></td>
        <td><%= post.imagen %></td>
        <td><%= post.category %></td>
        <td><%= post.user %></td>
        <td><%= post.published %></td>
        <td><%= post.category_id %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
